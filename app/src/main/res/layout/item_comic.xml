<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="@dimen/item_comic_height"
    android:padding="@dimen/item_comic_padding">

    <ImageView
        android:id="@+id/img_thumb"
        android:layout_width="@dimen/thumb_width"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:padding="@dimen/item_comic_thumb_padding"/>

    <TextView
        android:id="@+id/txt_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/img_thumb"
        android:textSize="@dimen/item_comic_text_size"/>

</RelativeLayout>